<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/transparent">

    <TextView
        android:text="Added Destinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="16dp"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/llDestinationsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Empty state or destinations will be added here dynamically -->
        <TextView
            android:id="@+id/tvNoDestinations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No destinations added yet"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"/>

    </LinearLayout>

    <TextView
        android:text="Passengers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="16dp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Empty state -->
        <TextView
            android:id="@+id/tvNoPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No passengers added yet"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Passengers will be added dynamically here -->
        <LinearLayout
            android:id="@+id/llPassengersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

    <TextView
        android:text="Preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="16dp"
        >
    </TextView>

    <!-- Checkboxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/llPetFriendly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true">

            <View
                android:id="@+id/viewPetCheckbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/checkbox_unchecked"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Friendly"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBabyFriendly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true">

            <View
                android:id="@+id/viewBabyCheckbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/checkbox_unchecked"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Friendly"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 km"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Estimated Ride Time"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0m"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 RSD"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="@color/light_green"
            android:textStyle="bold"
            android:background="@drawable/button_outline_light_green"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:padding="14dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finish"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            app:backgroundTint="@color/dark_brown"
            android:padding="14dp"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>