<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Block User Header -->
        <TextView
            android:id="@+id/tvBlockUserHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block User"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/title_text_view"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the email of the user you want to block:"
            android:textColor="@color/light_green"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Email Input with AutoComplete -->
        <AutoCompleteTextView
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter user email..."
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/text_input_field"
            android:inputType="textEmailAddress"
            android:completionThreshold="1"
            android:layout_marginBottom="20dp"/>

        <!-- Reason Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the reason for blocking:"
            android:textColor="@color/light_green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Reason Input (Multi-line) -->
        <EditText
            android:id="@+id/etBlockReason"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Enter reason..."
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/text_input_field"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:layout_marginBottom="24dp"/>

        <!-- Block User Button -->
        <Button
            android:id="@+id/btnBlockUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block User"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>