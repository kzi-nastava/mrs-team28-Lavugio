<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#BC6C25">

    <!-- Latest Ride (shown/hidden dynamically) -->
    <TextView
        android:id="@+id/nav_item_latest_ride"
        style="@style/NavMenuItem"
        android:text="Latest Ride"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nav_item_order_ride"
        style="@style/NavMenuItem"
        android:text="Order Ride" />

    <TextView
        android:id="@+id/nav_item_rides"
        style="@style/NavMenuItem"
        android:text="Rides"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_history"
        style="@style/NavMenuItem"
        android:text="History"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_reports"
        style="@style/NavMenuItem"
        android:text="Reports"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_notifications"
        style="@style/NavMenuItem"
        android:text="Notifications" />

    <TextView
        android:id="@+id/nav_item_profile"
        style="@style/NavMenuItem"
        android:text="Profile"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_logout"
        style="@style/NavMenuItem"
        android:text="Logout"
        android:background="@drawable/nav_item_border_top" />

</LinearLayout>