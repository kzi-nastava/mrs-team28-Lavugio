<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trip Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/trip_info_background"
                android:layout_marginBottom="8dp">

                <!-- Trip Details Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Begin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Begin:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#606C38"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <TextView
                            android:id="@+id/tripBeginText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="20.12.2024 14:30"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#BC6C25"
                            android:fontFamily="@font/inter_italic_variable_font"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- End -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#606C38"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <TextView
                            android:id="@+id/tripEndText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="20.12.2024 16:45"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#BC6C25"
                            android:fontFamily="@font/inter_italic_variable_font"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Departure -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Departure:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#606C38"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <TextView
                            android:id="@+id/tripDepartureText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Novi Sad, Bulevar osloboÄ‘enja 46"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#BC6C25"
                            android:fontFamily="@font/inter_italic_variable_font"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Destination -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#606C38"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <TextView
                            android:id="@+id/tripDestinationText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Beograd, Trg Republike 5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#BC6C25"
                            android:fontFamily="@font/inter_italic_variable_font"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#606C38"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <TextView
                            android:id="@+id/tripPriceText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="850.00 RSD"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#BC6C25"
                            android:fontFamily="@font/inter_italic_variable_font"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Status Section - Orange Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/status_background"
                    android:padding="16dp">

                    <!-- Cancelled -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Cancelled:"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <ImageView
                            android:id="@+id/cancelledIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cross"
                            android:contentDescription="Cancelled" />

                    </LinearLayout>

                    <!-- PANIC -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="PANIC:"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/inter_italic_variable_font" />

                        <ImageView
                            android:id="@+id/panicIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cross"
                            android:contentDescription="Panic" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Passengers Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/trip_info_background"
                android:layout_marginBottom="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passengers"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#606C38"
                    android:fontFamily="@font/inter_italic_variable_font"
                    android:padding="16dp"
                    android:paddingBottom="8dp"/>

                <!-- Passengers ScrollView -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:nestedScrollingEnabled="true"
                    android:fillViewport="false">

                    <LinearLayout
                        android:id="@+id/passengersContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp">

                        <!-- Passenger items will be added dynamically -->

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <!-- Map Placeholder -->
            <ImageView
                android:id="@+id/mapImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Map"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>