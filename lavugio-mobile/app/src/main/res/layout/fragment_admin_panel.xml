<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Administrator Panel Header TextView -->
    <TextView
        android:id="@+id/tvAdminPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrator Panel"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/title_text_view"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Register Driver Button -->
    <Button
        android:id="@+id/btnRegisterDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Driver"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/admin_panel_button"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"/>

    <!-- Driver Update Requests Button -->
    <Button
        android:id="@+id/btnDriverUpdateRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Update Requests"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/admin_panel_button"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"/>

    <!-- Block User Button -->
    <Button
        android:id="@+id/btnBlockUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block User"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/admin_panel_button"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"/>

    <!-- See Reports Button -->
    <Button
        android:id="@+id/btnSeeReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Reports"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/admin_panel_button"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"/>

    <!-- Panic Alerts Button -->
    <Button
        android:id="@+id/btnPanicAlerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸš¨ Panic Alerts"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/admin_panel_button"
        android:padding="16dp"
        android:textAllCaps="false"/>

</LinearLayout>