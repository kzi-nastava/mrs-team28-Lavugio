<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Checkboxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/llPetFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:clickable="true">

                <View
                    android:id="@+id/viewPetCheckbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/checkbox_unchecked"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Friendly"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBabyFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:clickable="true">

                <View
                    android:id="@+id/viewBabyCheckbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/checkbox_unchecked"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baby Friendly"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Vehicle Type Dropdown -->

        <Spinner
            android:id="@+id/spinnerVehicleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Add Passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginBottom="16dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_rounded"
                android:padding="4dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/etPassengerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter passenger email..."
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnAddPassenger"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_plus_circle"
                android:contentDescription="Add passanger"
                android:padding="10dp"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <!-- Add Passengers Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="16dp">
            <ScrollView
                android:id="@+id/svPassengersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="120dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Empty state -->
                    <TextView
                        android:id="@+id/tvNoPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No passengers added yet"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:padding="16dp" />

                    <!-- Passengers will be added dynamically here -->
                    <LinearLayout
                        android:id="@+id/llPassengersList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="@color/light_green"
            android:textStyle="bold"
            android:background="@drawable/button_outline_light_green"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:padding="14dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textColor="@color/light_green"
            android:textStyle="bold"
            android:background="@drawable/button_outline_light_green"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:padding="14dp"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>