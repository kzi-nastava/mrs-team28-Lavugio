<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRouteItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Route Name -->
        <TextView
            android:id="@+id/tvRouteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fakultet - Stan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/light_green"
            android:layout_marginBottom="12dp" />

        <!-- Destinations Count -->
        <TextView
            android:id="@+id/tvDestinationsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 destinations"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- From/To Labels with Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_orange"
                android:layout_marginHorizontal="4dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Addresses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFromAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Makedonska 2"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_orange"
                android:layout_marginHorizontal="4dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvToAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cara DuÅ¡ana 1"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>