<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#BC6C25">

    <!-- Driver Status Toggle Row -->
    <LinearLayout
        android:id="@+id/nav_item_status_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/nav_item_border_top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status:"
            android:textColor="#FEFAE0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/nav_driver_status_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="100dp"
            android:text="Offline"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:backgroundTint="#DC2626"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/nav_item_history"
        style="@style/NavMenuItem"
        android:text="History"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_rides"
        style="@style/NavMenuItem"
        android:text="Rides"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_reports"
        style="@style/NavMenuItem"
        android:text="Reports"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_notifications"
        style="@style/NavMenuItem"
        android:text="Notifications" />

    <TextView
        android:id="@+id/nav_item_profile"
        style="@style/NavMenuItem"
        android:text="Profile"
        android:background="@drawable/nav_item_border_top" />

    <TextView
        android:id="@+id/nav_item_logout"
        style="@style/NavMenuItem"
        android:text="Logout"
        android:background="@drawable/nav_item_border_top" />

</LinearLayout>