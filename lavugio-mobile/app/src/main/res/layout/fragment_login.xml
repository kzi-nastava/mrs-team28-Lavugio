<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFAE0">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_accent_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/login_title"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Email Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/login_email_placeholder"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Password Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/login_password_placeholder"
                    android:inputType="textPassword"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/login_password_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:contentDescription="Toggle password visibility"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_visibility" />
            </LinearLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="@color/lavugio_light_green"
                android:text="@string/login_button"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Footer Links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/login_register_link"
                    android:textColor="@color/primary_accent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/forgot_password_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end"
                    android:text="@string/login_forgot_password_link"
                    android:textColor="@color/primary_accent"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
