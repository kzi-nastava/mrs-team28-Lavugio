<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/transparent">

        <!-- Destination Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_rounded"
                android:padding="4dp"
                android:layout_marginEnd="8dp">

                <AutoCompleteTextView
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter a destination..."
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:popupBackground="@android:color/white"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnAddDestination"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg"
                android:contentDescription="Add waypoint"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_location_marker"
                app:backgroundTint="@color/white"
                app:tint="@color/light_green" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_rounded"
        android:layout_marginBottom="16dp">

        <!-- Replace ScrollView with a custom height LinearLayout wrapper -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:maxHeight="240dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/svDestinationsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:id="@+id/llDestinationsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Empty state or destinations will be added here dynamically -->
                    <TextView
                        android:id="@+id/tvNoDestinations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No destinations added yet"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:padding="16dp"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

        <!-- Select Favorite Route Text -->
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Select favorite route"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Favorite Route Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_rounded"
                android:padding="4dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/etFavoriteRoute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter favorite route name..."
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnSaveFavorite"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg"
                android:contentDescription="Save favorite route"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/white"
                app:tint="@color/light_brown" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous"
                android:textColor="@color/light_green"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:backgroundTint="@android:color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="2dp"
                android:padding="14dp"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:textColor="@color/light_green"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:backgroundTint="@android:color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="2dp"
                android:padding="14dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>