<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Destination Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_rounded"
                android:padding="4dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a destination..."
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnAddDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_marker"
                android:scaleType="centerInside"
                android:contentDescription="Add waypoint"
                android:background="@drawable/button_bg"
                app:backgroundTint="@color/white"
                app:tint="@color/light_green"
                android:padding="10dp"
                android:minWidth="48dp"
                android:minHeight="48dp"/>

        </LinearLayout>

        <!-- No Destinations Message -->
        <TextView
            android:id="@+id/tvNoDestinations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No destinations added yet"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/bg_white_rounded"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Select Favorite Route Text -->
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Select favorite route"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Favorite Route Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_rounded"
                android:padding="4dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/etFavoriteRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter favorite route name..."
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnSaveFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:scaleType="centerInside"
                android:contentDescription="Save favorite route"
                android:background="@drawable/button_bg"
                app:backgroundTint="@color/white"
                app:tint="@color/light_brown"
                android:padding="10dp"
                android:minWidth="48dp"
                android:minHeight="48dp"/>

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:backgroundTint="#9BA888"
                android:padding="14dp"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:backgroundTint="#FFFFFF"
                android:padding="14dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>