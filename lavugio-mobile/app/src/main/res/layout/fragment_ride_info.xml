<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FAFAEB">

    <!-- Header: "Ride information" + Report button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#606C38"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ride information"
            android:textColor="#FEFAE0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_report"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Report"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:backgroundTint="#B91C1C"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Time remaining card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/time_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME REMAINING"
                android:textColor="#606C38"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- min"
                android:textColor="#BC6C25"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elapsed: "
                    android:textColor="#606C38"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_elapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- min"
                    android:textColor="#BC6C25"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Ride details list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_price" />
        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_driver" />
        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_pickup" />
        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_dropoff" />
        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_departure" />
        <include layout="@layout/ride_detail_row"
            android:id="@+id/row_arrival" />

    </LinearLayout>

    <!-- Status indicator -->
    <FrameLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" />

    <!-- Action button (Cancel / Panic / Rate) -->
    <FrameLayout
        android:id="@+id/action_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp" />

</LinearLayout>