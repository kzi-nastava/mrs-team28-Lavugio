<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg_cream">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_header_green"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate ride"
            android:textColor="#FEFAE0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_review"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            app:tint="#FEFAE0" />

    </FrameLayout>

    <!-- Success state -->
    <LinearLayout
        android:id="@+id/review_success_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks for reviewing!"
            android:textColor="#1B4332"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your review helps us improve our service."
            android:textColor="#606C38"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_review_close_success"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Close"
            android:textColor="#FEFAE0"
            android:backgroundTint="#606C38"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- Form state -->
    <LinearLayout
        android:id="@+id/review_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Driver rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver rating"
            android:textColor="#283618"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/driver_stars_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp">

            <ImageView android:id="@+id/driver_star_1" style="@style/StarIcon" />
            <ImageView android:id="@+id/driver_star_2" style="@style/StarIcon" />
            <ImageView android:id="@+id/driver_star_3" style="@style/StarIcon" />
            <ImageView android:id="@+id/driver_star_4" style="@style/StarIcon" />
            <ImageView android:id="@+id/driver_star_5" style="@style/StarIcon" />

        </LinearLayout>

        <!-- Vehicle rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle rating"
            android:textColor="#283618"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/vehicle_stars_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp">

            <ImageView android:id="@+id/vehicle_star_1" style="@style/StarIcon" />
            <ImageView android:id="@+id/vehicle_star_2" style="@style/StarIcon" />
            <ImageView android:id="@+id/vehicle_star_3" style="@style/StarIcon" />
            <ImageView android:id="@+id/vehicle_star_4" style="@style/StarIcon" />
            <ImageView android:id="@+id/vehicle_star_5" style="@style/StarIcon" />

        </LinearLayout>

        <!-- Comment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment (Optional)"
            android:textColor="#283618"
            android:textSize="13sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_review_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top|start"
            android:hint="Enter comment..."
            android:textColor="#283618"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/input_border_green"
            android:inputType="textMultiLine"
            android:maxLength="256"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_review_char_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 / 256"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="end"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_send_review"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:text="Confirm"
            android:textColor="#FEFAE0"
            android:backgroundTint="#606C38"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_review_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review failed. Try again later."
            android:textColor="#2D6A4F"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>