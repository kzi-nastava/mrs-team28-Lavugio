<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter origin and destination"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <AutoCompleteTextView
        android:id="@+id/etOrigin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Origin address"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:completionThreshold="1"
        />

    <AutoCompleteTextView
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Destination address"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:completionThreshold="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnPickOrigin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Origin"
            android:background="@drawable/rounded_button_outline"
            android:textColor="@color/lavugio_white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPickDestination"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Destination"
            android:background="@drawable/rounded_button_outline"
            android:textColor="@color/lavugio_white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnShowRoute"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Show route"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@color/lavugio_white"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvRouteEstimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8dp"
        android:textColor="@color/lavugio_white"/>

    <!-- Price removed per request -->

</LinearLayout>