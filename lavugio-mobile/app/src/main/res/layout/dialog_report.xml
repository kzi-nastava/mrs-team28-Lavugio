<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg_amber"
    android:clipToOutline="true">

    <!-- Header â€” rounded top corners to match parent -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_header_amber"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report driver"
            android:textColor="#FEFAE0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_report"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            app:tint="#FEFAE0" />

    </FrameLayout>

    <!-- Success state -->
    <LinearLayout
        android:id="@+id/report_success_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report submitted"
            android:textColor="#283618"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for helping us keep the platform safe."
            android:textColor="#606C38"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_report_close_success"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Close"
            android:textColor="#FEFAE0"
            android:backgroundTint="#BC6C25"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- Form state -->
    <LinearLayout
        android:id="@+id/report_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_report_comment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="Enter complaint..."
            android:textColor="#283618"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/input_border_amber"
            android:inputType="textMultiLine"
            android:maxLength="256" />

        <TextView
            android:id="@+id/tv_report_char_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 / 256"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="end"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_send_report"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:text="Report"
            android:textColor="#FEFAE0"
            android:backgroundTint="#BC6C25"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_report_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Failed to submit report. Please try again."
            android:textColor="#BC6C25"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>