<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFAE0">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_password_title"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_accent_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Token Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/reset_token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter reset token from email"
                    android:inputType="text"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- New Password Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/reset_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/reset_password_new_password_placeholder"
                    android:inputType="textPassword"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/password_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:contentDescription="Toggle password visibility"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_visibility" />
            </LinearLayout>

            <!-- Confirm Password Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/reset_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/reset_password_confirm_placeholder"
                    android:inputType="textPassword"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/confirm_password_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:contentDescription="Toggle confirm password visibility"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_visibility" />
            </LinearLayout>

            <!-- Reset Button -->
            <Button
                android:id="@+id/reset_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/reset_password_button"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_accent_bg"
                android:layout_marginBottom="24dp" />

            <!-- Footer Link -->
            <TextView
                android:id="@+id/register_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password_register_link"
                android:textColor="@color/primary_accent"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
