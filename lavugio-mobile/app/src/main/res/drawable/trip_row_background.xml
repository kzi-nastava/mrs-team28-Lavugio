<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Kada je pritisnuto -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3F7F3" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#BC6C25" />
        </shape>
    </item>

    <!-- Normalno stanje -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFEF8" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#DDB892" />
        </shape>
    </item>

</selector>