<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FF0000"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Main shape -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5"/>
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#D32F2F"/>
        </shape>
    </item>
</layer-list>